<style>
    .hero--{{ id }} {
      background-image: url({{ settings.small_image | img_url: '600x' }});
    }
    @media (min-width: 600px) {
      .hero--{{ id }} {
        background-image: url({{ settings.small_image | img_url: 'master' }});
      }
    }
    @media (min-width: 992px) {
      .hero--{{ id }} {
        background-image: url({{ settings.large_image | img_url: 'master' }});
      }
    }
  </style>
  <section class="hero hero--{{ id }}">
    <div class="hero__content hero__content--{{ settings.alignment }}">
        <div class="hero__content_top_container">
            <p class="hero__heading">
                <span class="hero__span">
                    <i>{{settings.first_span}}</i>
                </span>
                    {{ settings.first_heading }}
                <br>
                <span class="hero__span">
                    <i>{{settings.second_span}}</i>
                </span>
                    {{ settings.second_heading }}
            </p>
        </div>
        <div class="hero__content_bottom_container">
            <a href="{{ settings.first_link_url }}" class="hero__link">{{ settings.first_link_text }}</a>
            <a href="{{ settings.second_link_url }}" class="hero__link">{{ settings.second_link_text }}</a>
        </div>
    </div>
  </section>